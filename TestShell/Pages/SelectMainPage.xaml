<Page x:Class="TestShell.Pages.SelectMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestShell.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectMainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Тесты"
                Width="200"
                Height="60"
                FontSize="35"
                Click="Tests_Click"
                Background="White"/>
        <Button Content="Для учителя"
                Grid.Row="1"
                Width="200"
                Height="60"
                FontSize="35"
                Click="Teacher_click"
                Background="White"/>
        <Image Source="/Images/school.png"
               HorizontalAlignment="Left"
               Grid.RowSpan="3"
               Margin="0,0,560,0"/>
        <Image Source="/Images/i.png"
               HorizontalAlignment="Right"
               Grid.RowSpan="3"
               Margin="520,0,5,0"/>
    </Grid>
</Page>
